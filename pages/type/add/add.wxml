<view class='pa-30'>

  <view class='bz'>
    <view style='height:60rpx'>
      <view class="avatar">
        <open-data type="userAvatarUrl" mode="aspectFill"></open-data>
      </view>
    </view>
    <form bindsubmit="formSubmit" report-submit="true">
      <view class='panel ra-10 '>
        <view class='pa-t30 panel-between item-center border-b pa-b20'>
          <view class='fo-30'>
            <text class='red'>*</text>名称</view>
          <input class='fo-30 text-right' confirm-type="next" value="{{name}}" name="name" placeholder='输入名称'></input>
        </view>
        <view class='pa-t30 panel-between item-center border-b pa-b20'>
          <view class='fo-30'>
            <text class='red'>*</text>长度</view>
          <input class='fo-30 text-right' confirm-hold value="{{length}}" name="length" placeholder='输入长度'></input>
        </view>
        <view class='pa-t30 panel-between item-center border-b pa-b20'>
          <view class='fo-30'>
            <text class='red'>*</text>支重</view>
          <input class='fo-30 text-right' confirm-hold value="{{weight}}" name="weight" placeholder='输入支重'></input>
        </view>

      </view>
      <button class='btns ' form-type="submit">提交</button>
    </form>

  </view>
